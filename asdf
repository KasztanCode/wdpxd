#include <iostream>
#include <vector>
using namespace std;

int kutasKozla(int x){
    int wynik = 0;
    for (int i = 1; i <= x; ++i) {
        wynik += i*6;
    }
    return wynik;
}

int potega(int a,int b)
{
    int wynik =a;
    for(int i=1;i<b;i++)
    {
        wynik=wynik*a;
    }
    return wynik;
}
int main() {
    int a=2;
    int b=4;
    cout<<kutasKozla(4);
    cout<<endl<<potega(a,b);
    return 0;

}

bool hababab(int x){
    int reversedNumber= 0;
    int number = x;
    int remainder;
    while(number != 0) {
        remainder = number % 10;
        reversedNumber = reversedNumber * 10 + remainder;
        number /= 10;
    }
    if (reversedNumber == x){
        return true;
    }
    return false;
}
